{
    "name": "sabiteck/conversion-microservice",
    "description": "File conversion and resizing microservice with PHP Slim",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.8",
        "intervention/image": "^2.7",
        "league/flysystem": "^3.15",
        "league/flysystem-aws-s3-v3": "^3.15",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.1",
        "phpoffice/phpword": "^1.1",
        "predis/predis": "^2.2",
        "ramsey/uuid": "^4.7",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "worker": "php bin/worker.php",
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
