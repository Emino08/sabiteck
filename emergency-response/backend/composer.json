{
    "name": "emergency-response/backend",
    "description": "Emergency Response Platform Backend API",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "illuminate/database": "^10.0",
        "ramsey/uuid": "^4.7",
        "league/flysystem": "^3.0",
        "defuse/php-encryption": "^2.4",
        "endroid/qr-code": "^5.0",
        "guzzlehttp/guzzle": "^7.7",
        "respect/validation": "^2.2",
        "predis/predis": "^2.2",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "EmergencyResponse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EmergencyResponse\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}