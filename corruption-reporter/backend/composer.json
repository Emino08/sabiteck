{
    "name": "corruption-reporter/backend",
    "description": "Backend API for Corruption Reporting Platform",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "slim/http": "^1.3",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "illuminate/database": "^10.0",
        "respect/validation": "^2.2",
        "ramsey/uuid": "^4.7",
        "intervention/image": "^2.7",
        "league/flysystem": "^3.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "phpmailer/phpmailer": "^6.8",
        "predis/predis": "^2.2",
        "tuupola/cors-middleware": "^1.4",
        "selective/basepath": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "analyze": "phpstan analyse src --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}