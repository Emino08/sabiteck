{
    "name": "credentials/verification-platform",
    "description": "Academic Credentials Verification Platform Backend API",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "firebase/php-jwt": "^6.8",
        "endroid/qr-code": "^5.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "league/csv": "^9.11",
        "ramsey/uuid": "^4.7",
        "symfony/console": "^6.3",
        "guzzlehttp/guzzle": "^7.8",
        "defuse/php-encryption": "^2.4",
        "league/flysystem": "^3.16",
        "intervention/image": "^2.7",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs src tests --standard=PSR12",
        "phpstan": "phpstan analyse src tests --level=8",
        "serve": "php -S localhost:8000 -t public",
        "migrate": "php migrations/setup.php migrate",
        "migrate-reset": "php migrations/setup.php reset"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}